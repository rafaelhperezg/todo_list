<hr>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <!-- the @task here we get it from the instance variable(and we find it with the find method) -->
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.label :name, "name of the new task" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :done, "Check if the task is done uncheck otherwise" %>
          <%= f.check_box :done %>
        </div>
        <%= f.submit class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
